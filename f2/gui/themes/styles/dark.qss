    border-radius: 8px;
}

QPushButton#tabButton:checked:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #818CF8,
        stop:1 #A78BFA);
    border-radius: 8px;
}

