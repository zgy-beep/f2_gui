/* ============================================
   F2 GUI 暗色主题样式表
   Dark Theme Stylesheet
   ============================================ */

/* ==========================================
   全局基础样式
   ========================================== */

* {
    font-family: "Microsoft YaHei UI", "Segoe UI", "PingFang SC", sans-serif;
}

QWidget {
    background-color: transparent;
    color: #E4E4E7;
    font-size: 13px;
}

QWidget[transparent="true"] {
    background: transparent;
    background-color: transparent;
}

QFrame {
    background: transparent;
    background-color: transparent;
}

/* ==========================================
   主窗口
   ========================================== */

QMainWindow {
    background-color: #1E1E2E;
}

/* ==========================================
   侧边栏
   ========================================== */

QFrame#sidebar {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 #252536,
        stop:0.5 #2A2A3D,
        stop:1 #252536);
    border-right: 1px solid rgba(99, 102, 241, 0.15);
}

QFrame#sidebar QLabel {
    color: #E4E4E7;
    background: transparent;
}

/* 侧边栏头部卡片 */
QFrame#sidebarHeaderCard {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(99, 102, 241, 0.15),
        stop:0.5 rgba(139, 92, 246, 0.1),
        stop:1 rgba(99, 102, 241, 0.08));
    border: 1px solid rgba(99, 102, 241, 0.25);
    border-radius: 12px;
}

QFrame#sidebarHeaderCard QLabel {
    background: transparent;
}

/* Logo 容器 */
QFrame#logoContainer {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(99, 102, 241, 0.4),
        stop:1 rgba(139, 92, 246, 0.3));
    border: 1px solid rgba(139, 92, 246, 0.4);
    border-radius: 10px;
}

/* 侧边栏标题 */
QLabel#sidebarTitle {
    color: #F3F4F6;
    font-weight: bold;
}

/* 侧边栏副标题 */
QLabel#sidebarSubtitle {
    color: #A1A1AA;
    font-size: 10px;
}

/* 侧边栏区域标签 */
QLabel#sidebarSectionLabel {
    color: #71717A;
    font-size: 10px;
    font-weight: 600;
    letter-spacing: 1px;
    text-transform: uppercase;
    padding: 4px 8px;
    background: transparent;
}

/* 导航区域卡片 */
QFrame#navSection {
    background: transparent;
    border: none;
    border-radius: 10px;
}

/* 侧边栏底部卡片 */
QFrame#sidebarBottomCard {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
        stop:0 rgba(99, 102, 241, 0.08),
        stop:1 rgba(139, 92, 246, 0.05));
    border: 1px solid rgba(99, 102, 241, 0.15);
    border-radius: 10px;
}

/* 主题切换按钮 */
QPushButton#themeToggleButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(99, 102, 241, 0.2),
        stop:1 rgba(139, 92, 246, 0.15));
    color: #E4E4E7;
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: 8px;
    padding: 6px 12px;
    font-size: 12px;
    font-weight: 500;
}

QPushButton#themeToggleButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(99, 102, 241, 0.35),
        stop:1 rgba(139, 92, 246, 0.25));
    border-color: rgba(139, 92, 246, 0.5);
    color: #FFFFFF;
}

QPushButton#themeToggleButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(99, 102, 241, 0.45),
        stop:1 rgba(139, 92, 246, 0.35));
}

/* 版本徽章 */
QFrame#versionBadge {
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 6px;
}

QLabel#versionIcon {
    background: transparent;
    font-size: 10px;
}

QLabel#versionText {
    color: #818CF8;
    background: transparent;
    font-size: 11px;
    font-weight: 500;
}

/* ==========================================
   导航按钮 - 卡片式渐变风格
   ========================================== */

QPushButton#navButton {
    background-color: transparent;
    color: #A1A1AA;
    border: 1px solid transparent;
    border-radius: 8px;
    padding: 8px 12px;
    text-align: left;
    font-size: 13px;
    min-height: 36px;
}

QPushButton#navButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(99, 102, 241, 0.15),
        stop:1 rgba(139, 92, 246, 0.1));
    color: #E4E4E7;
    border: 1px solid rgba(99, 102, 241, 0.2);
}

QPushButton#navButton:checked {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(99, 102, 241, 0.3),
        stop:1 rgba(139, 92, 246, 0.2));
    color: #FFFFFF;
    border: 1px solid rgba(99, 102, 241, 0.4);
}

QPushButton#navButton:checked:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(99, 102, 241, 0.4),
        stop:1 rgba(139, 92, 246, 0.3));
}

/* ==========================================
   顶部栏
   ========================================== */

QFrame#topBar {
    background-color: #252536;
    border-bottom: 1px solid #3D3D5C;
}

QFrame#topBar QLabel {
    color: #E4E4E7;
    background: transparent;
}

/* ==========================================
   滚动区域
   ========================================== */

QScrollArea {
    background-color: transparent;
    border: none;
}

QScrollArea > QWidget > QWidget {
    background-color: transparent;
}

/* ==========================================
   滚动条
   ========================================== */

QScrollBar:vertical {
    background-color: transparent;
    width: 8px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: #404060;
    border-radius: 4px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background-color: #505080;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
    background: none;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background-color: transparent;
    height: 8px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: #404060;
    border-radius: 4px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #505080;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0;
    background: none;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

/* ==========================================
   统计卡片样式 - 蓝紫色横向渐变风格
   ========================================== */

QFrame#statsCard {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(59, 130, 246, 0.15),
        stop:0.5 rgba(99, 102, 241, 0.12),
        stop:1 rgba(139, 92, 246, 0.15));
    border: 1px solid rgba(99, 102, 241, 0.25);
    border-radius: 14px;
}

QFrame#statsCard:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(59, 130, 246, 0.22),
        stop:0.5 rgba(99, 102, 241, 0.18),
        stop:1 rgba(139, 92, 246, 0.22));
    border-color: rgba(139, 92, 246, 0.4);
}

QFrame#statsCard QWidget {
    background: transparent;
    color: #E4E4E7;
}

QFrame#statsCard QLabel {
    background: transparent;
    color: #E4E4E7;
}

/* ==========================================
   可折叠卡片样式 - 蓝紫色横向渐变风格
   ========================================== */

QFrame#CollapsibleCard {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(59, 130, 246, 0.12),
        stop:0.5 rgba(99, 102, 241, 0.1),
        stop:1 rgba(139, 92, 246, 0.12));
    border: 1px solid rgba(99, 102, 241, 0.22);
    border-radius: 14px;
}

QFrame#CollapsibleCard:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(59, 130, 246, 0.18),
        stop:0.5 rgba(99, 102, 241, 0.15),
        stop:1 rgba(139, 92, 246, 0.18));
    border-color: rgba(139, 92, 246, 0.38);
}

QFrame#CollapsibleCard QLabel {
    color: #E4E4E7;
    background: transparent;
}

QFrame#CompactCollapsibleCard {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(59, 130, 246, 0.1),
        stop:0.5 rgba(99, 102, 241, 0.08),
        stop:1 rgba(139, 92, 246, 0.1));
    border: 1px solid rgba(99, 102, 241, 0.18);
    border-radius: 12px;
}

QFrame#CompactCollapsibleCard:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(59, 130, 246, 0.15),
        stop:0.5 rgba(99, 102, 241, 0.12),
        stop:1 rgba(139, 92, 246, 0.15));
    border-color: rgba(139, 92, 246, 0.32);
}

QFrame#CompactCollapsibleCard QLabel {
    color: #E4E4E7;
    background: transparent;
}

/* ==========================================
   渐变按钮系列
   ========================================== */

/* 主渐变按钮 - 紫色渐变 */
QPushButton#gradientButton,
QPushButton#gradientPrimaryButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #6366F1,
        stop:1 #8B5CF6);
    color: #FFFFFF;
    border: none;
    border-radius: 6px;
    padding: 4px 12px;
    font-weight: 600;
    font-size: 13px;
    min-height: 24px;
}

QPushButton#gradientButton:hover,
QPushButton#gradientPrimaryButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #818CF8,
        stop:1 #A78BFA);
}

QPushButton#gradientButton:pressed,
QPushButton#gradientPrimaryButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #4F46E5,
        stop:1 #7C3AED);
}

QPushButton#gradientButton:disabled,
QPushButton#gradientPrimaryButton:disabled {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(99, 102, 241, 0.3),
        stop:1 rgba(139, 92, 246, 0.3));
    color: rgba(255, 255, 255, 0.5);
}

/* 成功渐变按钮 - 绿色渐变 */
QPushButton#gradientSuccessButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #10B981,
        stop:1 #34D399);
    color: #FFFFFF;
    border: none;
    border-radius: 6px;
    padding: 4px 12px;
    font-weight: 600;
    font-size: 13px;
    min-height: 24px;
}

QPushButton#gradientSuccessButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #34D399,
        stop:1 #6EE7B7);
}

QPushButton#gradientSuccessButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
