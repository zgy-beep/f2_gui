}

QPushButton#gradientSuccessButton:disabled {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(16, 185, 129, 0.3),
        stop:1 rgba(52, 211, 153, 0.3));
    color: rgba(255, 255, 255, 0.5);
