        stop:0 #4A4A6A,
        stop:1 #5A5A7A);
    color: #FFFFFF;
}

QPushButton#cardSecondaryButton:pressed,
QPushButton#secondaryButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 #35354A,
